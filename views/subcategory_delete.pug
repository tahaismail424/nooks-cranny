extends layout 

block content 
    h1=title

    if items.length 

        p #[strong Delete the following items before attempting to delete this subcategory.]

        div.to-del-items

            h4 Items

            dl 
            each item in items 
                dt 
                    p= item.name 
                
    else 
        p Do you really want to delete this subcategory?


        form(method='POST' action='')
            div.form-group
                input#subcategoryid.form-control(type='hidden', name='subcategoryid', required='true', value=subcategory._id )
            
            button.btn.btn-primary(type='submit') Delete 